---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from '../components/ui/Navbar.astro';
import Footer from '../components/ui/Footer.astro';
import '../styles/styles.css'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://api.fontshare.com/v2/css?f[]=satoshi@500&f[]=cabinet-grotesk@500,700&display=swap" rel="stylesheet">		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
		<link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar></Navbar>
		<main>
			<slot />
		</main>
		<Footer></Footer>
	</body>
</html>
