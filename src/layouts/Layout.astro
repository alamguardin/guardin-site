---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: Title;
		src: url(../../fonts/Sora-Regular.ttf)format("truetype");
	}

	@font-face {
		font-family: Paragraph;
		src: url(../../fonts/Manrope-Regular.ttf)format("truetype");
	}

	@font-face {
		font-family: Button;
		src: url(../../fonts/Manrope-SemiBold.ttf)format("truetype");
	}

	:root {
		/* Pallete */
		--primary-text: #FAFAFA;
		--secundary-text: #C1C0BE;
		--accent: #1C1D1B;
		--background: #121211;
		/* Basic styles */
		font-family: Paragraph, Arial, Helvetica, sans-serif;
		font-size: 16px;
		background: var(--background);
		color: var(--primary-text);
	}

	*, *::after, *::before {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
	}

	img {
		max-width: 100%;
	}

	h1, h2 {
		display: inline-block;
		text-align: center;
		font-size: 38px;
		font-family: Title;
		background: #FAFAFA;
		background: -webkit-linear-gradient(90deg, #FAFAFA 0%, #1F1F1F 100%);
		background: -moz-linear-gradient(90deg, #FAFAFA 0%, #1F1F1F 100%);
		background: linear-gradient(90deg, #FAFAFA 0%, #1F1F1F 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
