<style>

	.hero {
		width: 100%;
		height: calc(100vh - 65px);
	}

	.container {
		width: 90%;
		margin: auto;
	}

	.hero .container {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	/* User image styles */
	.user__picture {
		margin-top: 3.125em;
		text-align: center;
	}

	.user__picture img {
		max-width: 100px;
		max-height: 100px;
		border-radius: 100%;
	}

	.user__name {
		margin-top: 1.25em;
		font-family: Button;;
		font-size: 0.875em;
		color: var(--secundary-text);
	}

	.hero h1 {
		margin: 3.125rem 0;
	}

	/* main section */
	main {
		margin: 6.25em 0 3.75em 0;
	}

	main section {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	/* Products Section */
	.products {
		margin-top: 3.75em;
		width: 100%;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 20px
	}
	/* Articles styles */
	section:nth-child(2) h2 {
		margin: 3.75rem 0;
	}

	.articles {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 40px;
	}
	/* Form section */
	section:nth-child(3) h2 {
		margin: 3.75rem 0;
	}

</style>
