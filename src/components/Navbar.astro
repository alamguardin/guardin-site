<style>
    .navbar {
        position: relative;
        padding: 1.25em 0;
        width: 100%;
        border-bottom: 1px solid var(--accent);
    }

    .navbar__container {
        max-width: 90%;
        margin: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar__brand {
        width: 50%;
    }

    .navbar__logo {
        color: var(--primary-text);
        font-size: 1.125em;
        font-family: Title;
    }

    .navbar__menu {
        width: 70%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar__list {
        display: flex;
        gap: 20px;
        list-style: none;
    }

    .navbar__item a {
        font-size: 0.875em;
        color: var(--secundary-text);
        transition: .2s all ease;
    }

    .navbar__item a:hover {
        color: var(--primary-text);
    }

    .navbar__social .navbar__item a {
