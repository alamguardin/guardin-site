    }

    .navbar__button {
        display: none;
        background: none;
        border: none;
        color: var(--secundary-text);
        font-size: 1.125em;
    }

    @media (max-width: 768px) {
        .navbar__button {
            display: inline-block;
        }

        .navbar__menu {
            display: none;
