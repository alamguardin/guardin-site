<form action="" class="form">
    <div class="form__group">
        <div class="form__input">
            <label class="form__label" for="name">Nombre</label>
            <input type="text" class="form__control" required id="name" autocomplete="off" placeholder="Jhon">
        </div>
        <div class="form__input">
            <label class="form__label" for="lastname">Apellido</label>
            <input type="text" class="form__control" required id="lastname" autocomplete="off" placeholder="Doe">
        </div>
    </div>
    <div class="form__input">
        <label class="form__label" for="email">Correo Electronico</label>
        <input type="email" class="form__control" required id="email" autocomplete="off" placeholder="jhondoe@mail.com">
    </div>
    <div class="form__input">
        <label class="form__label" for="message">Mensaje</label>
        <textarea class="form__control" required id="message" autocomplete="off" placeholder="Hazme una propuesta interesante..."></textarea>
    </div>
    <div class="form__submit">
        <button type="submit" class="button__primary">Enviar</button>
    </div>
</form>